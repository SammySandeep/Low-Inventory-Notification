<%= stylesheet_link_tag "application", "table_style.css" ,:media => "all" %>
<%= stylesheet_link_tag "application", "button_style.css" ,:media => "all" %>

<div class="container text-center" style="margin-bottom:20">
<p id="notice" style="color:green;text-align:left;"><%= notice %></p>
<div class="container text-center" >
<h3><b>Configuration</b></h3>
<div class="table-responsive">
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <td>Global Threshold</td>
      <td>Alert Frequency</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> <%= @shop_setting.global_threshold %> </td>
      <td> <%= @shop_setting.alert_frequency %> </td>
    </tr>
  <tbody>
</table>
</div>
<br>
<h3><b>Emails</b></h3>
<div class="table-responsive">
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <td>Email</td>
      <td>Is Admin</td>
      <td>Is Active</td>
    </tr>
  </thead>
  <tbody>
     <% @emails.each do |email|%>
      <tr>
        <td><%= email.email %></td>
        <td><%= email.is_admin %></td>
        <td><%= email.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  <%= link_to 'Back', shop_settings_path, :class => "btn backbtn" %>
  <%= link_to 'Edit', edit_shop_setting_path(@shop_setting), :class => "btn editbtn", :style =>"margin-right: 10px" %> 
</div>
</div>
