 <%if @email.destroy%>   

    var divElementforsuccessEmaildelete = document.getElementById("snackbar-success");
    divElementforsuccessEmaildelete.innerHTML = "Email deleted successfully!";
    divElementforsuccessEmaildelete.className = "show";
    setTimeout(function(){ divElementforsuccessEmaildelete.className = divElementforsuccessEmaildelete.className.replace("show", ""); }, 3000);
    window.location.replace("<%= shop_settings_path %>");
    
<%else%>

    var divElementforerrorEmaildelete = document.getElementById("snackbar-error");
    divElementforerrorEmaildelete.innerHTML = "Something went wrong.Please try again later!";
    divElementforerrorEmaildelete.className = "show";
    setTimeout(function(){ divElementforerrorEmaildelete.className = divElementforerrorEmaildelete.className.replace("show", ""); }, 3000);
    window.location.replace("<%= shop_settings_path %>");

<%end%>