<% if @email.errors.present? %>

    var divElementforErrorEmail = document.getElementById("snackbar-error");
    divElementforErrorEmail.innerHTML = "Something went wrong.Please enter valid email address!";
    divElementforErrorEmail.className = "show";
    setTimeout(function(){ divElementforErrorEmail.className = divElementforErrorEmail.className.replace("show", ""); }, 5000);

<% else %>

    var divElementforsuccessEmail = document.getElementById("snackbar-success");
    divElementforsuccessEmail.innerHTML = "Email created successfully!";
    divElementforsuccessEmail.className = "show";
    setTimeout(function(){ divElementforsuccessEmail.className = divElementforsuccessEmail.className.replace("show", ""); }, 5000);

<% end %>
