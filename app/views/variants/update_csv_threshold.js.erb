$('#modal-window').modal('hide');
<% if @import_csv_successful %>
    var divElementForImportCsvSuccess = document.getElementById("import-csv-success");
    divElementForImportCsvSuccess.className = "show";
    setTimeout(function(){ divElementForImportCsvSuccess.className = divElementForImportCsvSuccess.className.replace("show", ""); }, 3000);
<% else %>
     var divElementforImportCsvError = document.getElementById("import-csv-error");
    divElementforImportCsvError.className = "show";
    setTimeout(function(){ divElementforImportCsvError.className = divElementforImportCsvError.className.replace("show", ""); }, 3000);
<% end %>